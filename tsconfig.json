{
  "compilerOptions": {
    "noEmitOnError": true,
    "noErrorTruncation": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "removeComments": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "sourceMap": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "outDir": "dist",
    "declaration": true,

    "jsx": "preserve",

    "lib": ["dom", "es2015"],
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "types": ["index.d.ts"]
    }
  },
  "exclude": [
    "node_modules",
    ".yalc",
    "dist",
    "tests"
  ]
}
